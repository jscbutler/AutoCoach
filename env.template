# AutoCoach Configuration
# Copy this file to .env and fill in your credentials

# Server Configuration
AUTOCOACH_PORT=8000

# OAuth Redirect URI - Choose one:
# Production (via Cloudflare tunnel): https://autocoach.eve-market.space/auth/callback  
# Development (localhost): http://localhost:8000/auth/callback
OAUTH_REDIRECT_URI=https://autocoach.eve-market.space/auth/callback

# ============================================================================
# Strava API Configuration (Recommended - Instant Access)
# ============================================================================
# Get credentials from: https://www.strava.com/settings/api
# Create app at: https://www.strava.com/settings/api

# Required: OAuth credentials from Strava
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here

# Optional: Pre-existing tokens (filled after OAuth)
STRAVA_ACCESS_TOKEN=
STRAVA_REFRESH_TOKEN=

# ============================================================================
# TrainingPeaks API Configuration (Requires Approval)
# ============================================================================
# Get API access from: https://api.trainingpeaks.com/request-access
# Note: Requires approval process (1-2 weeks)

# Optional: OAuth credentials from TrainingPeaks
TRAININGPEAKS_CLIENT_ID=
TRAININGPEAKS_CLIENT_SECRET=

# Optional: Pre-existing tokens
TRAININGPEAKS_ACCESS_TOKEN=
TRAININGPEAKS_REFRESH_TOKEN=

# Use sandbox environment (true) or production (false)
TRAININGPEAKS_SANDBOX=true

# ============================================================================
# TrainingPeaks Web Scraper (Unofficial - No API Approval Needed)
# ============================================================================
# Alternative: Reuse browser cookies to fetch workout descriptions
# For single-user MVP only. Run: python scripts/setup_trainingpeaks_scraper.py

# Optional: Session cookie from browser (or save to ~/.tp_cookies.json)
TP_SESSION_COOKIE=
# Optional: Path to cookies file
TP_COOKIE_FILE=

# ============================================================================
# Garmin Connect (Unofficial API - Instant Access)
# ============================================================================
# Uses your Garmin credentials (no API approval needed)
# Tokens are cached locally in ~/.garmin_tokens.json

# Required: Your Garmin Connect credentials
GARMIN_EMAIL=your_garmin_email@example.com
GARMIN_PASSWORD=your_garmin_password


